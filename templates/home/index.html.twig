{% extends 'base.html.twig' %}

{% block title %}Главная страница{% endblock %}

{% block body %}

{%include 'home/navbarhome.html' %}


<div class="container" style="margin-left: 500px; margin-top: 50px"">
    <h1> Онлайн школа LearnHub</h1>
    Добро пожаловать на обучение!
</div>    


<div class="example-wrapper">
    <a href="{{ path('admin.index') }}">Администрирование</a>
    {% for item in articles %}
        <article>
            <h2>{{ item.title }}</h2>
            
            <div class="article-content">
                {{ item.body|raw|nl2br }}
            </div>
            <div>
                Дата создания: {{ item.createdAt|date('d.m.Y H:i:s') }}
            </div>
        </article>
    {% endfor %}
</div>

<img src="https://priceactionltd.com/wp-content/uploads/2021/01/trader-2048x1365.jpg"
    style="width: 500px; margin-left: 500px; margin-top: 50px" />

