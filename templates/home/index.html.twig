{% extends 'base.html.twig' %}

{% block title %}Главная страница{% endblock %}

{% block body %}

{%include 'home/navbar.html' %}

<div class="example-wrapper">
    
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
    
    {{ form_start(form, {attr: {"class": "d-inline"}}) }}
    {{ form_widget(form) }}
    <button class="btn btn-primary">Найти</button>
    {{ form_end(form) }}    
    
    {% for item in articles %}
        <article>
            <h2><a href="{{ path('article.show', {'article': item.id}) }}">{{ item.title }}</a></h2>
            <a href="{{ path('app_article_edit', {'id': item.id}) }}">Редактировать</a>            
            <div class="article-content">
                {{ item.body|raw|nl2br }}
            </div>
            <div>
                Дата создания: {{ item.createdAt|date('d.m.Y H:i:s') }}, Автор: {{ item.author }}
            </div>
        </article>
    {% else %}
        <div>Ничего не нашлось</div>    
    {% endfor %}
    {{ pagerfanta(articles) }}    
</div>



<img src="https://priceactionltd.com/wp-content/uploads/2021/01/trader-2048x1365.jpg"
    style="width: 500px; margin-left: 500px; margin-top: 50px" />




{% endblock %}
